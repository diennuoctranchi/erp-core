<div class="btn-group">
    <a class="btn btn-primary btn-xs" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
        <%= t('core.actions') %>
        <i class="fa fa-angle-down"></i>
    </a>
    <ul class="dropdown-menu pull-right">
        <% actions.each do |act| %>
            <% if act[:divider] %>
                <li class="divider"></li>
            <% else %>
                <li>
                    <a
                        href="<%= act[:url] if act[:url].present? %><%= act[:href] if act[:href].present? %>"
                        <%= ('data-method="' + act[:data_method] + '"').html_safe if act[:data_method].present? %>
                        <%= ('data-confirm="' + act[:data_confirm] + '"').html_safe if act[:data_confirm].present? %>
                        class="<%= act[:class] if act[:class].present? %>"
                    >
                        <%= act[:text].html_safe %>
                    </a>
                </li>
            <% end %>
        <% end %>
    </ul>
</div>    