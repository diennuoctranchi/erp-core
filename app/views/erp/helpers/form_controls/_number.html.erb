<div class="form-group <%= "has-error" if options[:errors].present? %>">
    <% if options[:label].present? %>
        <label><%= options[:label] %></label>
        <% if options[:required] == true %>
            <span class="required" aria-required="true"> * </span>
        <% end %>
        <% if options[:help].present? %>
            <i class="fa fa-info-circle right tooltips icon-default-color"
                data-original-title="<%= options[:help] %>"
                data-container="body"></i>
        <% end %>
    <% end %>
    
    <input class="form-control <%= options[:class] if options[:class].present? %> numberic"
        type="text"
        name="<%= options[:name] if options[:name].present? %>"
        value="<%= options[:value] if options[:value].present? %>"
        placeholder="<%= options[:placeholder] if options[:placeholder].present? %>"
        min="<%= options[:min].present? ? options[:min] : -100000000000000000 %>"
        max="<%= options[:max].present? ? options[:max] : 100000000000000000 %>"
        digit="<%= options[:digit].present? ? options[:digit] : 2 %>"
        number-type="<%= options[:type].present? ? options[:type] : "decimal" %>"
    />
        
    <% if options[:errors].present? %>
        <span class="help-block"> <%= options[:errors].join('<br/>').html_safe %></span>
    <% end %>
</div>