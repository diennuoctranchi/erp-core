<div class="form-group <%= "has-error" if options[:errors].present? %>">
    <label class="control-label">
        <%= options[:label] if options[:label].present? %>
        <% if options[:required] == true %>
            <span class="required" aria-required="true"> * </span>
        <% end %>
    </label>
    <div class="input-group date date-picker" data-date="<%= Time.now.in_time_zone("Asia/Bangkok").strftime("%d-%m-%Y") %>" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
        <input type="text"
               name="<%= options[:name] if options[:name].present? %>"
               placeholder="<%= options[:placeholder] if options[:placeholder].present? %>"
               class="form-control">
        <span class="input-group-btn">
            <button class="btn default" type="button">
                <i class="fa fa-calendar"></i>
            </button>
        </span>
    </div>
    <% if options[:errors].present? %>
        <span class="help-block"> <%= options[:errors].join('<br/>') %></span>
    <% end %>
</div>