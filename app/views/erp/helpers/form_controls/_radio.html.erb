<div class="form-group">
    <% if options[:label].present? %>
        <label><%= options[:label] %></label>
    <% end %>
    <div class="input-group">
        <div class="icheck-inline">
            <% if options[:options].present? %>
                <% options[:options].each do |option| %>
                    <label>
                        <input type="radio" class="icheck" data-radio="iradio_flat-grey"
                            <%= 'checked' if options[:value] == option[:value] %>
                            name="<%= options[:name] if options[:name].present? %>"
                            value="<%= option[:value] if option[:value].present? %>"
                        > <%= option[:text] %>
                    </label>
                <% end %>
            <% end %>
        </div>
    </div>
</div>