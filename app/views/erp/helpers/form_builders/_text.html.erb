<div class="form-group form-md-line-input">
    <label class="col-md-2 control-label" for="<%= options[:id] if options[:id].present? %>"><%= options[:label] if options[:label].present? %></label>
    <div class="col-md-10">
        <input type="text"
           class="form-control"
           id="<%= options[:id] if options[:id].present? %>"
           name="<%= options[:name] if options[:name].present? %>"
           value="<%= options[:value] if options[:value].present? %>"
           placeholder="<%= options[:placeholder] if options[:placeholder].present? %>"
        >
        <div class="form-control-focus"> </div>
        <span class="help-block"><%= options[:help] if options[:help].present? %></span>
    </div>
</div>